<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_create_note_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/create_note_header"
            android:hint="@string/create_note_header"
            android:inputType="text"
            tools:labelFor="@tools:sample/lorem" />


        <EditText
            android:id="@+id/edit_text_create_note_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:autofillHints="@string/create_note_body"
            android:gravity="start"

            android:hint="@string/create_note_body"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:scrollbars="vertical"
            tools:labelFor="@tools:sample/lorem" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>